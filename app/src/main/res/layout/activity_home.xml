<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/robot_bg"
    tools:context=".HomeActivity">

    <Button
        android:id="@+id/b_start"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_centerInParent="true"
        android:background="@drawable/shape_circle_button"
        android:text="启动"
        android:textColor="#3a68eb"
        android:textSize="32sp"
        android:textStyle="bold" />


    <ImageView
        android:id="@+id/iv_wifi"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="10dp"
        android:contentDescription="show wifi status"
        android:src="@drawable/wifi_3" />

    <TextView
        android:id="@+id/tv_wifi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/iv_wifi"
        android:layout_below="@id/iv_wifi"
        android:gravity="center"
        android:lines="1"
        android:textSize="22sp"
        tools:text="wzk1" />

    <TextView
        android:id="@+id/tv_wifi_rssi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/iv_wifi"
        android:layout_below="@id/tv_wifi"
        android:gravity="center"
        android:lines="1"
        android:textSize="22sp"
        tools:text="rssi" />


    <TextView
        android:id="@+id/tv_wifi_speed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/tv_wifi"
        android:layout_below="@id/tv_wifi_rssi"
        android:gravity="center"
        android:lines="1"
        android:textSize="22sp"
        tools:text="tv_wifi_speed" />

    <TextView
        android:id="@+id/tv_wifi_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/tv_wifi"
        android:layout_below="@id/tv_wifi_speed"
        android:gravity="center"
        android:lines="1"
        android:textSize="22sp"
        tools:text="state" />

    <View
        android:id="@+id/v_hidden_function"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="90dp"
        android:layout_marginStart="20dp" />

</RelativeLayout>