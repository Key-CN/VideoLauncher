<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/robot_bg"
    tools:context=".HomeActivity">

    <Button
        android:id="@+id/b_start"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_centerInParent="true"
        android:background="@drawable/shape_circle_button"
        android:text="启动"
        android:textColor="#3a68eb"
        android:textSize="32sp"
        android:textStyle="bold" />


    <ImageView
        android:id="@+id/iv_wifi"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_margin="20dp"
        android:contentDescription="show wifi status"
        android:src="@drawable/shape_circle_button" />

    <TextView

        android:id="@+id/tv_wifi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/iv_wifi"
        android:layout_below="@id/iv_wifi"
        tools:text="wzkj" />
</RelativeLayout>