<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/robot_bg"
    tools:context=".HomeActivity">

    <Button
        android:id="@+id/b_start"
        android:layout_width="210dp"
        android:layout_height="210dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="165dp"
        android:background="@android:color/transparent" />


    <ImageView
        android:id="@+id/iv_wifi"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="10dp"
        android:contentDescription="show wifi status"
        android:src="@drawable/icon_robot_wifi_four" />

    <TextView
        android:id="@+id/tv_wifi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/iv_wifi"
        android:layout_below="@id/iv_wifi"
        android:gravity="center"
        android:lines="1"
        android:textSize="22sp"
        tools:text="wzk1" />

    <TextView
        android:id="@+id/tv_wifi_rssi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/iv_wifi"
        android:layout_below="@id/tv_wifi"
        android:gravity="center"
        android:lines="1"
        android:textSize="22sp"
        tools:text="rssi" />


    <TextView
        android:id="@+id/tv_wifi_speed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/tv_wifi"
        android:layout_below="@id/tv_wifi_rssi"
        android:gravity="center"
        android:lines="1"
        android:textSize="22sp"
        tools:text="tv_wifi_speed" />

    <TextView
        android:id="@+id/tv_wifi_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/tv_wifi"
        android:layout_below="@id/tv_wifi_speed"
        android:gravity="center"
        android:lines="1"
        android:textSize="22sp"
        tools:text="state" />

    <TextView
        android:id="@+id/tv_ip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/tv_wifi"
        android:layout_below="@id/tv_wifi_state"
        android:gravity="center"
        android:lines="1"
        android:textSize="22sp"
        tools:text="ip" />

    <Button
        android:id="@+id/hidden_function"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="90dp"
        android:layout_marginStart="20dp"
        android:background="@null" />

    <ImageView
        android:layout_width="80dp"
        android:layout_height="8dp"
        android:layout_above="@id/hidden_function"
        android:layout_alignStart="@id/hidden_function"
        android:background="@android:color/holo_blue_bright"
        android:visibility="gone" />

</RelativeLayout>